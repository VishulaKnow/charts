{
  "canvas":{"class":"svg-chart","size":{"width":500,"height":650}},
  "options":{
    "type":"polar",
    "charts":[
      {
        "title":"Car prices (year 2021) very very long title of chart",
        "type":"donut",
        "legend":{"position":"left"},
        "data":{
          "dataSource":"dataSet_large",
          "keyField":{"name":"brand","format":"string"},
          "valueField":{"name":"price","format":"integer"}
        },
        "tooltip":{
          "data":{
            "fields":[
              {"name":"price","format":"money"},
              {"name":"count","format":"integer"}
            ]
          }
        },
        "appearanceOptions":{"innerRadius":60,"padAngle":0.05}
      }
    ]
  }
}